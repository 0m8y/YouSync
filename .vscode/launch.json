{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug all tests in file",
      "type": "python",
      "request": "launch",
      "module": "pytest",
      "args": [
        "YouSyncDev/tests/core/audio_managers/test_IAudioManager.py",
        "YouSyncDev/tests/core/audio_managers/test_YoutubeAudioManager.py",
        "YouSyncDev/tests/core/audio_managers/test_AppleAudioManager.py",
        "YouSyncDev/tests/core/audio_managers/test_SpotifyAudioManager.py",
        "YouSyncDev/tests/core/playlist_managers/test_IPlaylistManager.py"
      ],
      "console": "integratedTerminal",
      "justMyCode": false
    },
    {
      "name": "Run YouSync",
      "type": "python",
      "request": "launch",
      "program": "${workspaceFolder}/YouSyncDev/yousync.py",
      "console": "integratedTerminal",
      "justMyCode": false
    }
  ]
}
